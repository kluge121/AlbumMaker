<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="19dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/recyclerview_album_order_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/recyclerview_album_order_guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.922" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/recyclerview_album_order_guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.056" />

    <ImageView
        android:id="@+id/recyclerview_album_order_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/album_sample_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/recyclerview_album_order_guide1"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_guide3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/recyclerview_album_order_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:letterSpacing="-0.02"
        android:lines="1"
        android:singleLine="true"
        android:text="가족들과의 소중한 추억"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_guide1"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_album_order_image" />

    <TextView
        android:id="@+id/recyclerview_album_order_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:letterSpacing="-0.02"
        android:minWidth="100dp"
        android:text="세로 21x30cm"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_title"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_album_order_title" />

    <TextView
        android:id="@+id/recyclerview_album_order_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:letterSpacing="-0.02"
        android:minWidth="140dp"
        android:text="하드커버 8 페이지"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_sub_title"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_album_order_sub_title" />

    <TextView
        android:id="@+id/recyclerview_album_order_contents2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:letterSpacing="-0.02"
        android:minWidth="140dp"
        android:text="하드커버 8 페이지"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_sub_title"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_album_order_contents" />


    <TextView
        android:id="@+id/recyclerview_album_order_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="수량 : 2권"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_contents2"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_album_order_contents2" />

    <ImageView
        android:id="@+id/recyclerview_album_order_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/order_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_album_order_image" />

    <TextView
        android:id="@+id/recyclerview_album_order_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="상품금액"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_image"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_album_order_view1" />

    <TextView
        android:id="@+id/recyclerview_album_order_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14,900원"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/recyclerview_album_order_guide2"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_album_order_tv1" />


    <TextView
        android:id="@+id/recyclerview_album_order_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="할인금액"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_image"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_album_order_tv1" />

    <TextView
        android:id="@+id/recyclerview_album_order_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0원"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/recyclerview_album_order_guide2"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_album_order_tv2" />

    <TextView
        android:id="@+id/recyclerview_album_order_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="결제금액"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/recyclerview_album_order_image"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_album_order_tv2" />

    <TextView
        android:id="@+id/recyclerview_album_order_price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14,900원"
        android:textColor="#fc7665"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/recyclerview_album_order_guide2"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_album_order_tv3" />


</androidx.constraintlayout.widget.ConstraintLayout>